{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "outDir": "./dist/",
    "declaration": true,
    "declarationDir": "./dist/",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
